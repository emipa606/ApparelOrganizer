				<xpath>*/ThingDef[defName = "Apparel_ABC_Jacket"]/thingCategories/li/text()</xpath>
				<value>
					<thingCategories>
						<li>Civilian_Apparel_Fallout</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>
