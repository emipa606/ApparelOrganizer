<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@ParentName = "ApparelMakeableBaseAvali" or @Name = "AvaliApparelMakeableBase"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@ParentName = "ApparelMakeableBaseAvali" or @Name = "AvaliApparelMakeableBase"]/thingCategories/li/text()</xpath>
        <value>
          <thingCategories>Civilian_Apparel</thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
