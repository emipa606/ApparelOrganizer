        <xpath>/Defs/ThingDef[@ParentName = "ArmorMakeableBaseAvali" or @Name = "AvaliArmorMakeableBase"]/thingCategories/li/text()</xpath>
        <value>
          <thingCategories>Body_Armor</thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name = "AvaliHatMakeableBase"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@Name = "AvaliHatMakeableBase"]/thingCategories/li/text()</xpath>
        <value>
          <thingCategories>Hats</thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name = "AvaliArmorHelmetMakeableBase"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@Name = "AvaliArmorHelmetMakeableBase"]/thingCategories/li/text()</xpath>
        <value>
          <thingCategories>Helmets</thingCategories>
        </value>
